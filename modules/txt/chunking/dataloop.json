{
  "displayName": "Text Chunk Generator",
  "name": "txt_to_chunks",
  "scope": "public",
  "version": "0.0.37",
  "description": "This app provide processes of large text files by splitting them into smaller, manageable chunks based on specified parameters (size, overlap, and strategy) and uploads each chunk as a separate item in Dataloop, enabling easier handling and analysis of large documents.",
  "attributes": {
    "Category": "Application",
    "Provider": "Dataloop",
    "Deployed By": "Dataloop",
    "Application Type": [
      "Pipeline Node"
    ],
    "Media Type": [
      "Text"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/document-preprocessing.git",
    "gitTag": "0.0.37"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "txt-to-chunks-v2",
        "runtime": {
          "podType": "regular-s",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/document-preprocessing:0.1.2",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        }
      }
    ],
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "txt-to-chunks-v2.txt_to_chunks_v2.create_chunks"
        },
        "name": "create_chunks",
        "categories": [
          "Text-Preprocessing"
        ],
        "displayName": "Text to Chunks",
        "description": "Extracting Chunks from text files.",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Text-to-Chunks",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "chunking_strategy",
              "title": "chunking strategy",
              "props": {
                "type": "string",
                "required": true,
                "options": [
                  {
                    "value": "fixed-size",
                    "label": "fixed-size"
                  },
                  {
                    "value": "recursive",
                    "label": "recursive"
                  },
                  {
                    "value": "nltk-sentence",
                    "label": "nltk-sentence"
                  },
                  {
                    "value": "nltk-paragraphs",
                    "label": "nltk-paragraphs"
                  },
                  {
                    "value": "1-chunk",
                    "label": "1-chunk"
                  }
                ]
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error",
                  "errorMessage": "Chunking Strategy is required"
                }
              ],
              "widget": "dl-select"
            },
            {
              "name": "max_chunk_size",
              "title": "max chunk size",
              "props": {
                "type": "number",
                "default": 300,
                "min": 1,
                "max": 1000,
                "step": 1,
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            },
            {
              "name": "chunk_overlap",
              "title": "chunk overlap",
              "props": {
                "type": "number",
                "default": 20,
                "min": 1,
                "max": 1000,
                "step": 1,
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            },
            {
              "name": "remote_path_for_chunks",
              "title": "remote path for chunks",
              "props": {
                "type": "string",
                "default": "/chunk_files",
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            }
          ]
        }
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "txt-to-chunks-v2.clean_chunks_v2.clean_multiple_chunks"
        },
        "name": "preprocess",
        "categories": [
          "Text-Preprocessing"
        ],
        "displayName": "Clean Text",
        "description": "Clean text using Unstructured io.",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Clean-Text",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "to_correct_spelling",
              "title": "to correct spelling",
              "props": {
                "type": "boolean",
                "title": true,
                "default": false
              },
              "widget": "dl-checkbox"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "txt_to_chunks_v2",
        "computeConfig": "txt-to-chunks-v2",
        "entryPoint": "modules/txt/chunking/chunks_extractor.py",
        "className": "ChunksExtractor",
        "initInputs": [],
        "functions": [
          {
            "name": "create_chunks",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "icon-dl-langchain",
            "displayName": "TXT to Chunks"
          }
        ]
      },
      {
        "name": "clean_chunks_v2",
        "computeConfig": "txt-to-chunks-v2",
        "entryPoint": "modules/txt/chunks_cleaner.py",
        "className": "ChunksCleaner",
        "initInputs": [],
        "functions": [
          {
            "name": "clean_multiple_chunks",
            "input": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "icon-dl-unstucturedio",
            "displayName": "Cleaning Chunks"
          }
        ]
      }
    ]
  }
}