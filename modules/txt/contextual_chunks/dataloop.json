{
  "displayName": "Contextual Chunks Generator",
  "name": "contextual_chunks",
  "scope": "public",
  "version": "0.0.37",
  "description": "This app provide processes of large text files by splitting them into smaller, manageable chunks based on specified parameters (size, overlap, and strategy) and uploads each chunk as a separate item in Dataloop, enabling easier handling and analysis of large documents.",
  "attributes": {
    "Category": "Application",
    "Provider": "Dataloop",
    "Deployed By": "Dataloop",
    "License": "Apache 2.0",
    "Application Type": [
      "Pipeline Node"
    ],
    "Media Type": [
      "Text"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "dataloopai/dtlpy-agent:cpu.py3.10.opencv",
    "gitTag": "0.0.37"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "chunks-v2-service",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/document-preprocessing:0.1.3",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        }
      }
    ],
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "chunks-v2-service.chunks-v2-module.chunk_to_prompt"
        },
        "name": "chunk_to_prompt",
        "categories": [
          "text-utils"
        ],
        "displayName": "Chunk to Prompt",
        "description": "Chunk to Prompt item.",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Chunk-to-Prompt",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path",
              "title": "remote path for chunks",
              "props": {
                "type": "string",
                "default": "/chunks_prompts",
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "chunks-v2-service.chunks-v2-module.add_response_to_chunk"
        },
        "name": "add_response_to_chunk",
        "categories": [
          "text-utils"
        ],
        "displayName": "Add Context to Chunk",
        "description": "Add Context to Chunk.",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Context-to-Chunk",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "overwrite_chunk",
              "title": "Overwrite the chunk item",
              "props": {
                "type": "boolean",
                "title": true,
                "default": true
              },
              "widget": "dl-checkbox"
            },
            {
              "name": "remote_path",
              "title": "remote path for clean chunks",
              "props": {
                "type": "string",
                "default": "/contextual_chunks",
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "chunks-v2-module",
        "computeConfig": "chunks-v2-service",
        "entryPoint": "modules/txt/contextual_chunks/contextual_chunks.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "chunk_to_prompt",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-json-node",
            "displayName": "Chunk to Prompt"
          },
          {
            "name": "add_response_to_chunk",
            "input": [
              {
                "type": "Item",
                "name": "item"
              },
              {
                "type": "Model",
                "name": "model"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-merge",
            "displayName": "Add Context to Chunk"
          }
        ]
      }
    ]
  }
}