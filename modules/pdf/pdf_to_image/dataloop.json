{
  "displayName": "PDF to Images",
  "name": "pdf_to_image",
  "scope": "public",
  "version": "0.0.37",
  "description": "An application for converting PDF to Image items",
  "attributes": {
    "Category": "Application",
    "Provider": "Dataloop",
    "Deployed By": "Dataloop",
    "Application Type": [
      "Pipeline Node"
    ],
    "Media Type": [
      "Text"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/document-preprocessing.git",
    "gitTag": "0.0.37"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "pdf-to-image-v2",
        "runtime": {
          "podType": "regular-s",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/cpu/document-preprocessing:0.1.3",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        }
      }
    ],
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "pdf-to-image-v2.pdf_to_image_v2.pdf_item_to_images"
        },
        "name": "pdf-to-image",
        "categories": [
          "text-utils"
        ],
        "displayName": "PDF to Image",
        "description": "Converting PDF to Image items",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "PDF-to-Image",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "apply_modality",
              "title": "apply modality",
              "props": {
                "type": "boolean",
                "title": true,
                "default": false
              },
              "widget": "dl-checkbox"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "pdf_to_image_v2",
        "computeConfig": "pdf-to-image-v2",
        "entryPoint": "modules/pdf/pdf_to_image/pdf_to_image.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "pdf_item_to_images",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "image_item"
              }
            ],
            "displayIcon": "icon-dl-item-filled",
            "displayName": "PDF item to images"
          }
        ]
      }
    ]
  }
}