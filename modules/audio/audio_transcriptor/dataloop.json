{
  "displayName": "Audio Transcriptor",
  "name": "audio_transcriptor_pepsi",
  "scope": "public",
  "version": "0.0.52",
  "description": "An application for transcribing audio files",
  "attributes": {
    "Category": "Application",
    "Provider": "Dataloop",
    "Deployed By": "Dataloop",
    "License": "Apache 2.0",
    "Application Type": [
      "Pipeline Node"
    ],
    "Media Type": [
      "Audio"
    ]
  },
  "components": {
    "computeConfigs": [
      {
        "name": "audio-transcriptor-v2",
        "runtime": {
          "podType": "regular-s",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/document-preprocessing:0.1.4",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        }
      }
    ],
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "audio-transcriptor-v2.audio_transcriptor_v2.audio_transcription"
        },
        "name": "audio_transcriptor",
        "categories": [
          "audio-utils"
        ],
        "displayName": "Audio Transcriptor",
        "description": "Transcribing audio files",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Audio-Transcriptor",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path_for_transcriptions",
              "title": "remote path for transcriptions",
              "props": {
                "type": "string",
                "default": "/transcribed_audio",
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "language",
              "title": "transcription language",
              "props": {
                "type": "string",
                "title": true,
                "default": "en",
                "enum": ["en", "es", "fr", "de", "it", "pt", "auto"],
                "required": true
              },
              "widget": "dl-select"
            },
            {
              "name": "include_timestamps",
              "title": "include timestamps",
              "props": {
                "type": "boolean",
                "title": true,
                "default": false
              },
              "widget": "dl-checkbox"
            },
            {
              "name": "confidence_threshold",
              "title": "confidence threshold",
              "props": {
                "type": "number",
                "title": true,
                "default": 0.7,
                "min": 0.0,
                "max": 1.0,
                "step": 0.1
              },
              "widget": "dl-slider"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "audio_transcriptor_v2",
        "computeConfig": "audio-transcriptor-v2",
        "entryPoint": "modules/audio/audio_transcriptor/audio_transcriptor.py",
        "className": "AudioTranscriptor",
        "initInputs": [],
        "functions": [
          {
            "name": "audio_transcription",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "icon-dl-index-audio",
            "displayName": "Audio Transcription"
          }
        ]
      }
    ]
  }
} 