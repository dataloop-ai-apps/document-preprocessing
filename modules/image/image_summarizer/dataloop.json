{
  "displayName": "Image Summarizer",
  "name": "image_summarizer_pepsi",
  "scope": "public",
  "version": "0.0.52",
  "description": "An application for summarizing and analyzing images",
  "attributes": {
    "Category": "Application",
    "Provider": "Dataloop",
    "Deployed By": "Dataloop",
    "License": "Apache 2.0",
    "Application Type": [
      "Pipeline Node"
    ],
    "Media Type": [
      "Image"
    ]
  },
  "components": {
    "computeConfigs": [
      {
        "name": "image-summarizer-v2",
        "runtime": {
          "podType": "regular-s",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/document-preprocessing:0.1.4",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        }
      }
    ],
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "image-summarizer-v2.image_summarizer_v2.image_summarization"
        },
        "name": "image_summarizer",
        "categories": [
          "image-utils"
        ],
        "displayName": "Image Summarizer",
        "description": "Summarizing and analyzing images",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Image-Summarizer",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path_for_summaries",
              "title": "remote path for summaries",
              "props": {
                "type": "string",
                "default": "/image_summaries",
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "analysis_type",
              "title": "analysis type",
              "props": {
                "type": "string",
                "title": true,
                "default": "general",
                "enum": ["general", "object_detection", "scene_analysis", "text_extraction", "facial_recognition"],
                "required": true
              },
              "widget": "dl-select"
            },
            {
              "name": "include_text_extraction",
              "title": "include text extraction (OCR)",
              "props": {
                "type": "boolean",
                "title": true,
                "default": false
              },
              "widget": "dl-checkbox"
            },
            {
              "name": "summary_language",
              "title": "summary language",
              "props": {
                "type": "string",
                "title": true,
                "default": "en",
                "enum": ["en", "es", "fr", "de", "it", "pt", "auto"],
                "required": true
              },
              "widget": "dl-select"
            },
            {
              "name": "confidence_threshold",
              "title": "confidence threshold",
              "props": {
                "type": "number",
                "title": true,
                "default": 0.8,
                "min": 0.0,
                "max": 1.0,
                "step": 0.1
              },
              "widget": "dl-slider"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "image_summarizer_v2",
        "computeConfig": "image-summarizer-v2",
        "entryPoint": "modules/image/image_summarizer/image_summarizer.py",
        "className": "ImageSummarizer",
        "initInputs": [],
        "functions": [
          {
            "name": "image_summarization",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "icon-dl-image-generation-filled",
            "displayName": "Image Summarization"
          }
        ]
      }
    ]
  }
} 