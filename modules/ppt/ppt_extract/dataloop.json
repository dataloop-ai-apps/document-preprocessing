{
  "displayName": "PPT to Txt",
  "name": "ppt_to_txt",
  "scope": "public",
  "version": "0.0.52",
  "description": "An application for converting PPT/PPTX to Txt items",
  "attributes": {
    "Category": "Application",
    "Provider": "Dataloop",
    "Deployed By": "Dataloop",
    "License": "Apache 2.0",
    "Application Type": [
      "Pipeline Node"
    ],
    "Media Type": [
      "Text"
    ]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/document-preprocessing.git",
    "gitTag": "0.0.52"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "ppt-to-txt-v2",
        "runtime": {
          "podType": "regular-s",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/document-preprocessing:0.1.3",
          "concurrency": 10,
          "autoscaler": {
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          }
        }
      }
    ],
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "ppt-to-txt-v2.ppt_to_txt_v2.ppt_extraction"
        },
        "name": "ppt_to_txt",
        "categories": [
          "text-utils"
        ],
        "displayName": "PPT to Txt",
        "description": "Converting PPT/PPTX to Txt items",
        "scope": "project",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "PPT-to-Txt",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path_for_extractions",
              "title": "remote path for extractions",
              "props": {
                "type": "string",
                "default": "/extracted_from_ppts",
                "title": true,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "extract_notes",
              "title": "extract speaker notes",
              "props": {
                "type": "boolean",
                "title": true,
                "default": false
              },
              "widget": "dl-checkbox"
            },
            {
              "name": "extract_tables",
              "title": "extract tables",
              "props": {
                "type": "boolean",
                "title": true,
                "default": false
              },
              "widget": "dl-checkbox"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "ppt_to_txt_v2",
        "computeConfig": "ppt-to-txt-v2",
        "entryPoint": "modules/ppt/ppt_extract/ppt_extractor.py",
        "className": "PptExtractor",
        "initInputs": [],
        "functions": [
          {
            "name": "ppt_extraction",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "icon-dl-overview",
            "displayName": "PPT to Txt"
          }
        ]
      }
    ]
  }
} 